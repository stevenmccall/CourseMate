<?xml version="1.0" encoding="utf-8" ?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
  <item android:state_pressed="true" >
    <shape>
      <solid
          android:color="#ef4445" />
      <stroke
          android:width="1sp"
          android:color="#992f2f" />
      <corners
          android:radius="6sp" />
      <padding
          android:left="10sp"
          android:right="10sp" />
    </shape>
  </item>
  <item>
    <shape>
      <gradient
          android:startColor="#ef4445"
          android:endColor="#992f2f"
          android:angle="270" />
      <stroke
          android:width="1sp"
          android:color="#992f2f" />
      <corners
          android:radius="6sp" />
      <padding
          android:left="10sp"
          android:right="10sp" />
    </shape>
  </item>
</selector>